<Page x:Class="Email.ListMessagesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Email"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListMessagesPage">

    <Grid>
        <ListBox x:Name="MessagesLbx" Foreground="#344E41" SelectionChanged="MessagesLbx_SelectionChanged" MenuItem.Click="MessagesLbx_Click" >
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="Open" Header="Открыть" MouseRightButtonDown="Open_MouseRightButtonDown"/>
                    <MenuItem Name="Answer" Header="Ответить" MouseRightButtonDown="Open_MouseRightButtonDown"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Grid>
</Page>
